<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa3c6de"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="00:0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="100sp" />

    <ToggleButton
        android:id="@+id/startToggleButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:height="75sp"
        android:onClick="onStartToggleButtonClicked"
        android:text="ToggleButton"
        android:textOff="Start"
        android:textOn="Stop"
        android:textSize="50sp"
        android:width="150sp" />

    <TextView
        android:id="@+id/lapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Laps: 0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/nextLapTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lapTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Next lap:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>