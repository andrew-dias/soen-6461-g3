<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intervaltraining"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.intervaltraining.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.intervaltraining.SettingsActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.intervaltraining.ViewLogActivity"
            android:label="@string/title_activity_view_log" >
        </activity>
        <activity
            android:name="com.example.intervaltraining.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
	    <activity android:name="com.example.intervaltraining.SongPickerActivity" 
	              android:label="Song Picker" >
	        <intent-filter>
	           <action android:name=".SongPickerActivity" />
	           <category android:name="android.intent.category.DEFAULT" />
	       </intent-filter>
	    </activity>
	</application>

</manifest>